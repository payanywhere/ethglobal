{
  "name": "payanywhere-back",
  "module": "src/server.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "bunx --watch tsx src/server.ts",
    "build": "bun build ./src/server.ts --outdir dist --target bun",
    "start": "bun run dist/server.js",
    "test": "bun test",
    "biome": "bunx biome check src",
    "biome:fix": "bunx biome check src --write",
    "docker:build": "bash ./scripts/docker-build.sh",
    "docker:run": "bash ./scripts/docker-run.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "^1.3.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "tsx": "^4.20.6"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "mongoose": "^8.19.3"
  },
  "engines": {
    "node": ">=22.10.0 <23"
  },
  "packageManager": "yarn@1.22.22"
}